
<div class="col-sm-12" style="float: none; text-align: center;">
    <div class="form-box" style="width: 480px; margin: auto;">
        <div class="form-top">
            <div class="form-top-left">
                <h3>Login to our site</h3>
                <p>Enter username and password to log in:</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-lock"></i>
            </div>
        </div>
        <div class="form-bottom">
            <form role="form" action="/login" method="post" class="login-form">
                <div class="form-group">
                    <label class="sr-only" for="form-username">Username</label>
                    <input type="text" name="loginUsername" placeholder="Username..." class="form-username form-control" id="form-username">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="form-password">Password</label>
                    <input type="password" name="loginPassword" placeholder="Password..." class="form-password form-control" id="form-password">
                </div>
                <button type="submit" class="btn">Sign in!</button>
            </form>
        </div>
        <br>
        <!-- message to user -->
        <% if (errorMessage.length > 0) { %>
        <div class="alert alert-danger error" role="alert"><strong><%= errorMessage %></strong></div>
        <% } %>
    </div>
