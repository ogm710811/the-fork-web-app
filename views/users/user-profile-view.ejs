<div class="container">
<div class="row">
    <div class="col-sm-3">
        <a href="/user/edit-profile" class="btn btn-danger btn-block btn-compose-email">Edit Profile</a>
        <ul class="nav nav-pills nav-stacked nav-email shadow mb-20">
            <li class="active">
                <a href="#mail-inbox.html">
                    <i class="fa fa-info"></i> Your Account
                </a>
            </li>
            <li>
                <a href="#mail-inbox.html">
                    <i class="fa fa-inbox"></i> Total Recipes  <span class="label label-info pull-right inbox-notification"><%= recipeList.length %></span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-comments-o"></i> Total Reviews <span class="label label-info pull-right inbox-notification">35</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-star"></i> Average Rating Recipes <span class="label label-info pull-right inbox-notification">4.5</span>
                </a>
            </li>
        </ul><!-- /.nav -->

        <h5 class="nav-email-subtitle">Recipe by Categories</h5>
        <ul class="nav nav-pills nav-stacked nav-email mb-20 rounded shadow">
            <li>
                <a href="#">
                    <i class="fa fa-folder-open"></i> Breakfast and Brunch  <span class="label label-danger pull-right"><%= categories[0] %></span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-folder-open"></i> Lunch and Dinner  <span class="label label-danger pull-right"><%= categories[1] %></span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-folder-open"></i> Fancy Dessert  <span class="label label-danger pull-right"><%= categories[2] %></span>
                </a
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-folder-open"></i> Light Ideas  <span class="label label-danger pull-right"><%= categories[3] %></span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-folder-open"></i> Appetizer And Snacks  <span class="label label-danger pull-right"><%= categories[4] %></span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-folder-open"></i> Season Salads  <span class="label label-danger pull-right"><%= categories[5] %></span>
                </a>
            </li>
            
        </ul><!-- /.nav -->
    </div>
    <div class="col-sm-9">
        
        <!-- info -->
        <div class="panel panel-default">
            <div class="panel-heading resume-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-xs-12 col-sm-4">
                        <% if (typeof user.photoAddress === 'undefined') { %>
                            <figure>
                                <img class="img-circle img-responsive" alt="" src="http://placehold.it/200x200">
                            </figure>
                        <% } else { %>
                            <figure>
                                <img class="img-circle img-responsive" alt="" src="<%= user.photoAddress %>">
                            </figure>
                        <% } %>
                        
                        <div class="row">
                            <div class="col-xs-12 social-btns">
                                
                            </div>                                  
                        </div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                        <ul class="list-group" style="margin-top: 20px;">
                            <li class="list-group-item"><%= user.fullName %></li>
                            <li class="list-group-item"><%= user.username %></li>
                            <!--
                            <li class="list-group-item"><i class="fa fa-phone"></i> 000-000-0000 </li> 
                            <li class="list-group-item"><i class="fa fa-envelope"></i> john@example.com</li> 
                            -->
                        </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bs-callout bs-callout-danger">
                <h4>Intro</h4>
                <% if (typeof user.introProfile === 'undefined') { %>
                    <p>
                        Please, enter a brief introduction about you.
                    </p>
                <% } else { %>
                    <p>
                        <%= user.introProfile %>
                    </p>
                <% } %>                
            </div>
            <!-- alert message here -->
            <% if (typeof successMessage !== 'undefined' && successMessage.length > 0) { %>
                <div class="alert alert-success">
                    <strong>Success!</strong> <%= successMessage %>
                </div>
            <% } %>
            
            </div>
        </div>
        <!-- end info -->

    </div>
</div>
</div>