
<div class="container">
    <div class="panel panel-success">
      <div class="panel-heading"><h3 style="margin-left: 40px;">Edit your Profile</h3></div>
      <!-- panel body -->
      <div class="panel-body"> 
        <!-- form -->    
        <form class="form-horizontal" method="post" action="edit-profile" enctype="multipart/form-data">
        <!-- first column input -->
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">                
                <div class="col-sm-9">
                <label for="full-name" style="color:#3c763d;">Full Name</label>
                <input type="text" class="form-control" id="full-name" name="updateFullName" placeholder="Enter full name ...">
                </div>
            </div>
            <!--
            <div class="form-group">
                <div class="col-sm-9"> 
                <label for="phone" style="color:#3c763d;">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="updatePhoneNumber" placeholder="Enter phone number ...">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9">
                <label for="email" style="color:#3c763d;">Email</label>
                <input type="text" class="form-control" id="email" name="updateEmail" placeholder="Enter email ...">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9">
                <label for="intro" style="color:#3c763d;">Intro</label>
                <textarea class="form-control" id="intro" name="updateIntro" rows="10" placeholder="A brief description of you"></textarea>
                </div>
            </div> 
            -->
            <hr>                  
            <div class="form-group">
                <div class="col-sm-9">
                <label for="username" style="color:#3c763d;">New Username</label>
                <input type="text" class="form-control" id="username" name="updateUsername" placeholder="Enter username ...">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9"> 
                <label for="current-pwd" style="color:#3c763d;">Current Password</label>
                <input type="password" class="form-control" id="current-pwd" name="currentPassword" placeholder="Enter password ...">
                </div>
            </div> 
            <div class="form-group">
                <div class="col-sm-9"> 
                <label for="pwd" style="color:#3c763d;">New Password</label>
                <input type="password" class="form-control" id="pwd" name="updatePassword" placeholder="Enter password ...">
                </div>
            </div> 
            <hr>           
            <div class="form-group"> 
                <div class="col-sm-12">
                <button type="submit" class="btn btn-default" style="background-color:#3c763d;">Save</button>
                </div>
            </div>
            <!-- alert message here -->
            <% if (typeof errorMessage !== 'undefined') { %>
                <div class="alert alert-warning">
                    <strong>Warning!</strong> <%= errorMessage %>
                </div>
            <% } %>
            
          </div>
          <!-- second column upload picture -->
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <!-- upload picture -->
            <div class="form-group">
                <label for="exampleInputFile" style="color:#3c763d;">Update Profile Picture</label>
                <input type="file" class="form-control-file" id="exampleInputFile" name="profilePicture" aria-describedby="fileHelp">
                <small id="fileHelp" class="form-text text-muted">For perfect display your picture dimensions must be 300 x 300 pxs.</small>
            </div>
            <div class="form-group">
                <div class="col-sm-9">
                <label for="intro" style="color:#3c763d; margin-left:-15px;">Intro</label>
                <textarea style="margin-left:-15px; width:450px;" class="form-control" id="intro" name="updateIntro" rows="20" placeholder="A brief description of you"></textarea>
                </div>
            </div> 
          </div>
        </form>  <!-- end form -->  
        <div style="margin-top: 470px;">
            <a href="my-profile">Back to My Profile</a> 
        </div>
        
      </div> <!-- end panel body -->
    </div>
</div>
      